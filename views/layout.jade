doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap-theme.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav(role="navigation")#navigation.navbar.navbar-default

    block content

    footer#footer

    script(data-main="js/main", src="/bower_components/requirejs/require.js")
    script(type="text/template", id="navigation_template").
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" class="navbar-toggle collapsed">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-brand">Brand</a>
        </div>
        <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
          <ul class="nav navbar-nav main_navigation">
          </ul>
        </div>
      </div>

    script(type="text/template", id="users_list_template").
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Age</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <button class="btn btn-success">Add user</button>

    script(type="text/template", id="users_item_template").
      <td><%= name %></td>
      <td><%= age %></td>

    script(type="text/template", id="footer_template").
      <div class="container">
        <div class="row">
          <div class="col-xs-10">
            <div class="footer_content"></div>
          </div>
          <div class="col-xs-2">
            <div class="copyright">Copyright (c) 2014</div>
          </div>
        </div>
      </div>
